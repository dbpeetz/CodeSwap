                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="~/Home/Index">
                        <img style="	width: 64px;" src="~/Image/Floral-Pattern-Elephant-Silhouette-300px.png" alt="Never Forget">Never Forget Shopping List
                    </a>
                </div>
                <div id="navbar5" class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                    <ul class="nav navbar-nav ">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Your Shopping Lists", "Index", "ShoppingList")</li>
                        }
                    </ul>

                </div>
                <!--/.nav-collapse -->
            </div>
            <!--/.container-fluid -->
        </nav>

    </div>

